{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
{#    <h1>Articles</h1>#}

    <table class="table" id="articles-table">
        <tbody>
        {% for article in articles %}
            <tr>
                <td><a class="black" href="{{ path('article_show', {'id': article.id}) }}">"{{ article.title }}"<span class="date">, written on {{ article.date ? article.date|date('Y-m-d H:i:s') : '' }}</span></a></td>
                <td><img src="{{ asset('assets/img/computer-4.png') }}"></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
